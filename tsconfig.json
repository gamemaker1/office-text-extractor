// tsconfig.json
// The Typescript configuration for the project.

{
	"compilerOptions": {
		"target": "es2020",
		"module": "node16",
		"sourceMap": false,
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"moduleResolution": "node16",
		"declaration": true,
		"outDir": "build/",
		"skipLibCheck": true
	},
	"include": ["source/"]
}
